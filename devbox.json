{
  "packages": [
    "kind@0.27.0",
    "gh@2.67.0",
    "kubectl@1.32.2",
    "bat@0.25.0",
    "upbound@0.37.1",
    "kubernetes-helm@3.17.1",
    "watchexec@2.3.0",
    "kyverno-chainsaw@0.2.12",
    "just@1.39.0",
    "jq@1.7.1",
    "gum@0.16.0",
    "yq-go@4.45.1",
    "crossplane-cli@1.19.0",
    "viddy@1.3.0",
    "kcl-cli@0.8.9",
    "path:gcloud#google-cloud-sdk",
    "teller@2.0.7",
    "azure-cli@2.70.0",
    "awscli2@2.24.16",
    "nushell@0.102.0"
